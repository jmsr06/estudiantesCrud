pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven 3.8.4"
    }

    stages {
        stage('Limpiar'){
            steps {
                sh "mvn clean"
            }
        }
        stage('Compilar'){
            steps {
                sh "mvn compile"
            }
        }
        stage('Test'){
            steps {
                sh "mvn test"
            }
        }
        stage('Empaquetar'){
            steps {

                sh "mvn -Dmaven.test.failure.ignore=true package"
            }
        }
    }
}
